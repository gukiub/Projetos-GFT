@model Mercado.DTO.FornecedorDTO

@{
    Layout = "_LayoutAdmin";
}
<h2>Novo Fornecedor</h2>
<hr>
<form class="form-horizontal" asp-controller="Fornecedores" asp-action="Atualizar" method="POST">
    <input type="hidden" asp-for="Id">
    <label asp-for="Nome">Nome</label>
    <input type="text" asp-for="Nome" class="form-control" placeholder="Nome do Fornecedor"><br>
    <label asp-for="Email">E-mail</label>
    <input type="email" asp-for="Email" class="form-control" placeholder="email@dofornecedor.com"><br>
    <label asp-for="Telefone">Telefone</label>
    <input asp-for="Telefone" class="form-control" placeholder="98 7 9875-2564"><br>
    <button class="btn btn-success">Atualizar</button><br>
    <p></p><span asp-validation-for="Nome" class="text-danger mt-4"></span><br>
    <span asp-validation-for="Email" class="text-danger"></span><br>
    <span asp-validation-for="Telefone" class="text-danger"></span><br>
</form>