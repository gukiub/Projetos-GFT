@model Mercado.DTO.ProdutoDTO

@{
    Layout = "_LayoutAdmin";
}
<h3>Nova Produto</h3>
<hr>
<form class="form-horizontal" asp-controller="Produto" asp-action="Salvar" method="POST">
    <input type="hidden" asp-for="Id" value="0">
    
    <label asp-for="Nome">Nome</label>
    <input type="text" asp-for="Nome" class="form-control" placeholder="Nome do produto">
    
    <label asp-for="CategoriaID">Categoria</label>
    <select class="form-control" asp-for="CategoriaID" asp-items='@(new SelectList(ViewBag.Categorias, "Id", "Nome"))'></select>
    
    <label asp-for="FornecedorID">Fornecedor</label>
    <select class="form-control" asp-for="FornecedorID" asp-items='@(new SelectList(ViewBag.Fornecedores, "Id", "Nome"))'></select>
    
    <label asp-for="PrecoDeCusto">Preço de custo</label>
    <input class="form-control" asp-for="PrecoDeCusto" type="number" step="any" placeholder="10.99">

    <label asp-for="PrecoDeVenda">Preço de Venda</label>
    <input class="form-control" asp-for="PrecoDeVenda" type="number" step="any" placeholder="20.00">

    <label asp-for="Medicao">Unidade de medida</label>
    <select class="form-control" asp-for="Medicao">
        <option value="0">Litros</option>
        <option value="1">Kilo</option>
        <option value="2">Unidade</option>
    </select><br>
    
    <button class="btn btn-success">Cadastrar</button><br>
    <p></p><span asp-validation-for="Nome" class="text-danger"></span>
    <p></p><span asp-validation-for="PrecoDeCusto" class="text-danger"></span>
    <p></p><span asp-validation-for="PrecoDeVenda" class="text-danger"></span>    
</form>