@model IEnumerable<Mercado.Models.Produto>
@{
    Layout = "_LayoutAdmin";
}
<h2>Produtos</h2>
<hr>
<a asp-action="NovoProduto" asp-controller="Gestao" class="btn btn-success">Criar Novo Produto</a>
<hr>

<script>
    $(document).ready( function () {
        $('#produtos').DataTable();
    } );
</script>

<table id="produtos" class="table table-striped table-bordered">
    <thead>
        <tr>
            <th>Id</th>
            <th>Nome</th>
            <th>Categoria</th>
            <th>Fornecedor</th>
            <th>Preço de custo</th>
            <th>Preço de venda</th>
            <th>Unidade de medida</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var produto in Model)
        {
            <tr>
                <td>@produto.Id</td>
                <td>@produto.Nome</td>
                <td>@produto.Categoria.Nome</td>
                <td>@produto.Fornecedor.Nome</td>
                <td>@produto.PrecoDeCusto</td>
                <td>@produto.PrecoDeVenda</td>
                <td>
                    @{
                        if (produto.Medicao == 0)
                        {
                            <span>Litro</span>
                        } else if (produto.Medicao == 1){
                            <span>Kilo</span>
                        } else {
                            <span>Unidade</span>
                        }
                    }
                </td>
                <td><a class="btn btn-primary" href="/Gestao/EditarProduto/@produto.Id">Editar</a> 
                
                <form style="display: inline;" asp-controller="Produtos" asp-action="Deletar">
                    <input type="hidden" name="id" id="id" value="@produto.Id">
                    <button class="btn btn-danger">Deletar</button>
                </form>
                </td>
            </tr>
        } 
    </tbody>
</table>