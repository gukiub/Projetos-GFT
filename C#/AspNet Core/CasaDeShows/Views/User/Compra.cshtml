@model CasaDeShows.DTO.EventoDTO

@{
    ViewData["Title"] = "Compra";
}

<h1>Compra</h1>

<h4>EventoDTO</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <div class="w-100" style="height: 50em;">
            <img src="@Model.CaminhoImagem" width="100%" height="100%"/>
        </div>
            <form asp-controller="User" asp-action="ConfirmarCompra" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <input asp-for="Id" type="hidden" class="form-control" readonly />
                </div>

                <div class="form-group">
                    <label asp-for="Nome" class="control-label"></label>
                    <input asp-for="Nome" class="form-control" readonly />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Preco" class="control-label"></label>
                    <input asp-for="Preco" class="form-control" readonly />
                    <span asp-validation-for="Preco" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Data" class="control-label"></label>
                    <input asp-for="Data" class="form-control" readonly />
                    <span asp-validation-for="Data" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Ingressos" class="control-label"></label>
                    <input asp-for="Ingressos" class="form-control" readonly />
                    <span asp-validation-for="Ingressos" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label class="control-label">Quantidade de Ingressos da compra</label>
                    <input class="form-control" type="number" min="1" max="@Model.Ingressos" name="quantidade"/>
                </div>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
