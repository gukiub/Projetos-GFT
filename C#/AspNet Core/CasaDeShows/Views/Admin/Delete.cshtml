@model CasaDeShows.Models.CasasDeShow

@{
    ViewData["Title"] = "Deletar";
    Layout = "_LayoutAdmin";
}

<div class="container">
<div class="jumbotron" >
<h1 class="text-dark">Deletar</h1>

<h3 class="text-dark">Tem certeza que deseja deletar?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Local)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Local)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Deletar" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-primary">Voltar para a lista</a>
    </form>
</div>
</div>
</div>
