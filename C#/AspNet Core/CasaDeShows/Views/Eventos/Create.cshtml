@model CasaDeShows.Models.Eventos

@{
    ViewData["Title"] = "Criar";
    Layout = "_LayoutAdmin";
}

<div class="container">
<div class="jumbotron">

<h1 class="text-dark">Criar Eventos</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form>
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" id="nome"/>
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Preco" class="control-label"></label>
                <input asp-for="Preco" class="form-control" id="preco"/>
                <span asp-validation-for="Preco" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Data" class="control-label"></label>
                <input asp-for="Data" class="form-control" id="data"/>
                <span asp-validation-for="Data" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ingressos" class="control-label"></label>
                <input asp-for="Ingressos" class="form-control" id="ingressos"/>
                <span asp-validation-for="Ingressos" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CasaDeShows" class="control-label"></label>
                <select asp-for="CasaDeShows" class="form-control" id = "casaDeShowsId" asp-items='@(new SelectList(@ViewBag.batata, "Id", "Nome"))'></select>
            </div>
            <div class="form-group">
                <input type="button" value="Create" class="btn btn-primary" id="btnCadastrar"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar para a lista</a>
</div>

</div>
</div>

<script src="~/js/jquery-3.4.1-COMPLETASSO.js"></script>
<script type="text/javascript">
    $(document).ready(function(){
        function Evento(){
            var Nome;
            var CasaDeShows; 
            var Preco; 
            var Data;
            var Ingressos;
        }
        var evento; 
        $("#btnCadastrar").click(function() {
            evento = new Evento();
            evento.Nome = $("#nome").val();
            evento.CasaDeShows = $("#casaDeShowsId").val();
            evento.Preco = $("#preco").val();
            evento.Data = $("#data").val();
            evento.Ingressos = $("#ingressos").val();
            console.log(evento);

            $.ajax({
                url: '@Url.Action("Criando", "NovoEvento")',
                contentType: "application/json; charset=utf-8",
                type: 'POST',
                data: { eventos: evento },
                success: function (data) {
                    alert("deu bom");
                },
                error: function (e) {
                    //called when there is an error
                    //console.log(e.message);
                }
            });
        });

    });
</script>