@model CasaDeShows.Models.Eventos

@{
    ViewData["Title"] = "Criar";
    Layout = "_LayoutAdmin";
}
<div class="container">
<div class="jumbotron">

<h1>Criar Eventos</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Preco" class="control-label"></label>
                <input asp-for="Preco" class="form-control" />
                <span asp-validation-for="Preco" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="data" class="control-label"></label>
                <input asp-for="data" class="form-control" />
                <span asp-validation-for="data" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Ingressos" class="control-label"></label>
                <input asp-for="Ingressos" class="form-control" />
                <span asp-validation-for="Ingressos" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CasaDeShows" class="control-label">Casa de show</label>
                <select asp-for="CasaDeShows" class="form-control" asp-items='@(new SelectList(@ViewBag.batata, "Id", "Nome"))'></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Voltar para a lista</a>
</div>

</div>
</div>