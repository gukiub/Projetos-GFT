@model IEnumerable<CasaDeShows.Models.Eventos>

@{
    ViewData["Title"] = "Home";
    Layout = "_LayoutAdmin";
}


<div class="container">
    <div class="jumbotron">
        <h1 class="text-dark">Eventos</h1>
        <hr />

        <p>
            <a asp-controller="Eventos" asp-action="Criando" class="btn btn-success mt-2 mb-4">Criar Novo</a>
        </p>
        <table class="table table table-hover">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Nome)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Preco)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Data)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Ingressos)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.CasaDeShows.Local)
                    </th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nome)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Preco)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Data)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Ingressos)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.CasaDeShows.Local)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary mr-2">Edit</a>
                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

