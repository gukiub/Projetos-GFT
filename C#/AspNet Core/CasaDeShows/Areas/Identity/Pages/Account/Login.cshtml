<div class="limiter">
    <div class="container-login100" style="background-image: url('/Login_v16/images/bg-01.jpg');">
            <div class="wrap-login100 p-t-30 p-b-50">
				<span class="login100-form-title p-b-41">
					Login
				</span>
            <form id="account" method="post" class="login100-form validate-form p-b-33 p-t-5">
                
                <div class="wrap-input100 validate-input">
                    <input asp-for="Input.Email" class="input100" placeholder="casa@show" required/>
                </div>
                <div class="wrap-input100 validate-input">
                    <input asp-for="Input.Password" class="input100" placeholder="*******" required/>
                </div>
                <div class="container-login100-form-btn m-t-32">
                        <button type="submit" class="login100-form-btn">
                            Logar
                            </button>
                </div>
                <div class="container-login100-form-btn m-t-32">
                    <div class="checkbox">
                        <label asp-for="Input.RememberMe">
                            <input asp-for="Input.RememberMe"/>
                            @Html.DisplayNameFor(m => m.Input.RememberMe)
                        </label><br>
                  
                    <p>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Cadastrar uma nova conta.</a>
                    </p>
                    </div>
                </div>

                <div class="container-login100-form-btn m-t-32">
                    <div asp-validation-summary="All" class="text-danger"></div>
                </div>
            </form>

</div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
