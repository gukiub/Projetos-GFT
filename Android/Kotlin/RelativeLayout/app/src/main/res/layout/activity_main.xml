<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#53B2D1"
    tools:context=".MainActivity"
    android:paddingStart="16dp"
    android:paddingEnd="16dp">

    <TextView
        android:id="@+id/dia"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Quarta, 7 de setembro"
        android:textColor="#fff"
        android:gravity="center"
        android:textSize="24sp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="16dp" />


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#fff"
        android:layout_below="@id/dia" />

    <CheckBox
        android:id="@+id/checkCortar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cortar a grama"
        android:textColor="#fff"
        android:textSize="18sp"
        android:layout_marginTop="30dp"
        android:layout_alignParentStart="true"
        android:layout_below="@id/dia"/>


    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fazer as compras"
        android:textColor="#fff"
        android:textSize="18sp"
        android:layout_marginTop="8dp"
        android:layout_alignParentStart="true"
        android:layout_below="@id/checkCortar"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Complete todas as tarefas"
        android:textColor="#fff"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:textSize="18sp"
        android:layout_marginTop="32dp"
        android:layout_marginBottom="16dp" />
</RelativeLayout>